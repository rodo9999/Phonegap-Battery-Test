<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.bsdmasterindex.phonegapbattery-test"
        version     = "1.2.1"
        versionCode = "10" >
        <!-- versionCode is optional and Android only -->
        <preference name="phonegap-version" value="3.5.0" />

        <name>Phonegap Battery Status test</name>
        <description>Simple battery test</description>
        <author href="http://bsdmasterindex.com" email="jessemonroy650@yahoo.com">
        Jesse Monroy
        </author>
        <gap:platform name="android" />
        <gap:platform name="ios" />

        <preference name="permissions" value="none"/>
	<preference name="android-minSdkVersion" value="10" /> 
         <!-- device required so we can detect if we are using iOS -->
		<gap:plugin name="org.apache.cordova.device" version="0.2.12" />
		<gap:plugin name="org.apache.cordova.battery-status" version="0.2.11" />
    </widget>
